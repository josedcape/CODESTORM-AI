modules = ["web", "python-3.11", "nodejs-20"]
run = "python main_completo.py"

[nix]
channel = "stable-24_05"
packages = ["glibcLocales", "iana-etc", "openssl", "postgresql"]

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "python main_completo.py"]

[workflows]
runButton = "Run Main App"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[[workflows.workflow]]
name = "Run Application"
author = 41940718
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 main:app --reload"

[[workflows.workflow]]
name = "Run CODESTORM"
author = 41940718
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --workers 1 main:app --reload"

[[workflows.workflow]]
name = "Check API Keys"
author = 41940718
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Verificando claves API configuradas...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"ANTHROPIC_API_KEY: ${ANTHROPIC_API_KEY:0:5}...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"OPENAI_API_KEY: ${OPENAI_API_KEY:0:5}...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"GEMINI_API_KEY: ${GEMINI_API_KEY:0:5}...\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Recuerda configurar tus claves API en el panel de Secrets\""

[[workflows.workflow]]
name = "Run App"
author = 42013161
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow]]
name = "Run Command Processor"
author = 42013161
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python command_processor.py"

[[workflows.workflow]]
name = "Run Main App"
author = 42013161
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000
